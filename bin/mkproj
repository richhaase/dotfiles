#!/usr/bin/env python

'''
	A simple program for creating new python program directory structures

    usage:	mkproj [--git] <project_name>
'''

import sys
import os
from optparse import OptionParser

parser = OptionParser()
parser.add_option('-g', '--git', help='write report to FILE', metavar='FILE', help='set new project up as a git repo')
parser.add_option('-v', action='store_true', dest='verbose', help='verbose mode: lots of debugging stuff')
parser.add_option('-q', action='store_false', dest='verbose', default=False, help='quiet mode: no extraneous information [Default]')

(options, args) = parser.parse_args()
print 'Options:\n %s\n' % options
print 'Args:\n %s\n' % args
